<body class= "container">
<% if (role!="Admin") { %>
      <%- include('../navbar') %>
       <% } else { %>
      <%- include('../navbaradmin') %>
      <% } %>


  
    <div class = "jumbotron">
        <h1>
          <br/>
           Add a new member
        </h1>
    </div>
  
    
  <div class=" box">
    <form action="/users<%= %>/adduser" method="post">
      <div class="form-group">
            <label for="User_name">User Id</label>
          <input type = "text" class="form-control" id="User_name" name="User_name" placeholder="Enter a new user id" required minlength="4" required>
      </div>
      <div class="form-group">
            <label for="Name">Name</label>
          <input type="text" class="form-control" id="Name"  placeholder="Ex. John Smith" name="Name" required> 
      </div>
      <div class="form-group">
            <label for="Email_Address">Email Address</label>
          <input type="text" class="form-control" id="Email_Address" placeholder="Ex. abc@xyz.com" pattern="[a-zA-Z0-9$#!_]+@[a-zA-Z0-9]+[.][a-zA-Z]+" name="Email_Address" required> </div>
      <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control"  id="Password" name="Password"  pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$" placeholder="Must contain upper case, lower case alphabets & a number." required>
      </div>
      <div class="form-group">
        <label for="Role">Role</label>
        <select class="form-control" id="Role" name="Role" placeholder="Admin or Reader">
            <option>Admin</option>
            <option>Reader</option>
    </select>
        
      </div>
      
      <button type="submit" class="btn btn-primary">Add the user</button>
  </form>
  </div>

  
</body>
</html> 